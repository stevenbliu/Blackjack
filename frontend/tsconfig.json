{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@features/*": ["features/*"],
      "@components/*": ["components/*"],
      "@redux/*": ["redux/*"],
      "@websockets/*": ["websockets/*"]
    },
    "types": ["vite/client"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
